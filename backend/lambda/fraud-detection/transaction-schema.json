{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Transaction Schema",
  "description": "Schema for transaction data in AuroraDetect fraud detection system",
  "type": "object",
  "properties": {
    "transactionId": {
      "type": "string",
      "description": "Unique identifier for the transaction",
      "pattern": "^[a-zA-Z0-9-_]+$",
      "minLength": 1,
      "maxLength": 100
    },
    "cardId": {
      "type": "string",
      "description": "Unique identifier for the card used in the transaction",
      "pattern": "^[a-zA-Z0-9-_]+$",
      "minLength": 1,
      "maxLength": 50
    },
    "amount": {
      "type": "number",
      "description": "Transaction amount in the base currency unit",
      "minimum": 0,
      "maximum": 1000000
    },
    "location": {
      "type": "string",
      "description": "Location where the transaction occurred",
      "minLength": 1,
      "maxLength": 200
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of when the transaction occurred",
      "format": "date-time"
    }
  },
  "required": [
    "transactionId",
    "cardId",
    "amount",
    "location",
    "timestamp"
  ],
  "additionalProperties": false,
  "examples": [
    {
      "transactionId": "txn_1234567890",
      "cardId": "card_abcd1234",
      "amount": 150.75,
      "location": "New York, NY",
      "timestamp": "2024-01-15T14:30:00.000Z"
    },
    {
      "transactionId": "txn_0987654321",
      "cardId": "card_efgh5678",
      "amount": 25000,
      "location": "Los Angeles, CA",
      "timestamp": "2024-01-15T14:31:00.000Z"
    }
  ]
} 